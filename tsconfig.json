{
    "compilerOptions": {
        "module": "esnext",
        "noImplicitAny": true,
        "target": "es5",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        "dist",
        "docs",
        "test",
        "types"
    ],
    "typedocOptions": {
        "entryPoints": [
            "./index.ts",
            "./spec/index.ts"
        ],
        "out": "docs",
        "hideGenerator": true
    }
}